<div class="row justify-content-md-center">
   <center><h1 class="display-5" style="margin-top: 20px;">Login</h1></center></br>
    <div class="col-md-4" style="margin-top:50px">
        {{#if message}}
           <div class="alert {{messageClass}}">
               {{message}}
           </div>
        {{/if}}
        
        <form method="post" action="/login"> <!-- cambio-->
        
        <div class="form-group">
            Email
            <input type="text" name="email" id="email" class="form-control" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            Password
            <input type="password" name="password" id="password" class="form-control">
        </div></br>
           
        <center><button type="submit" class="btn btn-info btn-lg">LOGIN</button></center>
        </form>
    </div>
</div>