{{> header}}

<div class="row justify-content-md-center">
   <center><h1 class="display-5" style="margin-top: 20px;">{{ viewTitle }}</h1></center></br>
    <div class="col-md-4" style="margin-top:50px">
        <form action="/employee" method="post">
            <input type="hidden" name="_id" class="form-control" value="{{employee._id}}">
            <div class="form-group">
                Employee First name
                <input type="text" name="firstname" class="form-control" value="{{employee.firstname}}" required>
            </div>
            <div class="form-group">
                Employee Last name
                <input type="text" name="lastname" class="form-control" value="{{employee.lastname}}" required>
            </div>
            <div class="form-group">
                Email
                <input type="email" name="email" class="form-control" value="{{employee.email}}" required>
            </div>
            <div class="form-group">
                Phone number
                <input type="tel" name="phone" class="form-control" value="{{employee.phone}}" required>
            </div>
            <div class="form-group">
                Hire date
                <input type="text" name="hiredate" class="form-control" value="{{employee.hiredate}}" required>
            </div>
            <div class="form-group">
                Job ID
                <input type="text" name="jobid" class="form-control" value="{{employee.jobid}}" required>
            </div>
            <div class="form-group">
                Salary
                <input type="text" name="salary" class="form-control" value="{{employee.salary}}" required>
            </div>
            <div class="form-group">
                Commission PCT
                <input type="text" name="commission" class="form-control" value="{{employee.commission}}" required>
            </div></br>
                <center><button type="submit" class="btn btn-info btn-lg">Save</button></center>
        </form>
    </div>
</div>